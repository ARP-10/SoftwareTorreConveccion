/* ============================================================
   ESTILO GLOBAL - LABORATORIO DIKOIN
   ============================================================ */

/* === FONDO GENERAL === */
QWidget {
    background-color: #ecf1fd; 
    color: #000000;
    font-family: "Segoe UI";
    font-size: 11pt;
}

/* === QGROUPBOX === */
QGroupBox {
    background-color: #FFFFFF;      
    border-radius: 20px;
    border: none;
    padding: 40px 28px 28px 28px;
    font: 600 14pt "Segoe UI";
    box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.10);
    margin: 18px 14px;
}

QGroupBox:hover {
    box-shadow: 0px 12px 28px rgba(0, 0, 0, 0.30);
    transform: scale(1.01);
    transition: all 0.25s ease-in-out;
}


QGroupBox QWidget {
    background-color: #FFFFFF;     
}

/* Nota: en algunos estilos el tama√±o se coge de QGroupBox (no de ::title). */
QGroupBox::title {      
    subcontrol-position: top left; 
    margin-top: 10px;      
    margin-left: 20px;
    color: #0077b6;
    font: 600 14pt "Segoe UI";
    padding-left: 40px; 
    background-repeat: no-repeat;
    background-position: left center;
    padding-top: 10px;
    padding-bottom: 10px;
    min-height: 32px;
}

/* Titulos */
QGroupBox#group_control::title {
    background-image: url("icons/ajustes.png");
    background-repeat: no-repeat;
    background-position: 8px center;
    background-size: 20px 20px;
    padding-left: 40px;
}

QGroupBox#group_grafica::title {
    background-image: url("icons/graph.png");
    background-repeat: no-repeat;
    background-position: 8px center;
    background-size: 20px 20px;
    padding-left: 40px;
}

QGroupBox#group_tabla::title {
    background-image: url("icons/table.png");
    background-repeat: no-repeat;
    background-position: 8px center;
    background-size: 20px 20px;
    padding-left: 40px;
}

/* === PUSH BUTTONS === */
QPushButton {
    background: #0077b6;
    color: #FFFFFF;
    border: none;
    border-radius: 14px;
    padding: 8px 16px;
    font-weight: 600;
    font-size: 11pt;
    box-shadow: 0px 4px 10px rgba(0, 119, 182, 0.3);
}

QPushButton:hover {
    background: #0096c7;
}


QPushButton:pressed {
    background: #005f87;
    transform: scale(0.97);
}

/* === BOT√ìN DE IDIOMA (QToolButton) === */
QToolButton#btn_language {
    background-color: #0077b6;
    color: #FFFFFF;
    border: none;
    border-radius: 14px;
    padding: 8px 16px;
    font-weight: 600;
    font-size: 11pt;
    box-shadow: 0px 4px 10px rgba(0, 119, 182, 0.3);
}


QToolButton#btn_language:hover {
    background-color: #0096c7;
}

QToolButton#btn_language:pressed {
    background-color: #005f87;
    transform: scale(0.97);
}

/* --- Men√∫ desplegable del bot√≥n --- */
QMenu {
    background-color: #FFFFFF;
    border: 1px solid #C9D6E8;
    border-radius: 8px;
    padding: 4px;
}

QMenu::item {
    padding: 6px 14px;
    font-size: 10.5pt;
    color: #000000;
    border-radius: 6px;
}

QMenu::item:selected {
    background-color: #E0EEFF;
    color: #0078D7;
}


/* === LABELS === */
QLabel {
    font-size: 12pt;
    color: #000000;
}

/* === TABLA DE RESULTADOS === */
QTableWidget {
    background-color: #FFFFFF;
    border-radius: 14px;
    border: none;
    gridline-color: #E0E6F0;
    alternate-background-color: #F3F7FB;
    selection-background-color: #E0F0FF;
    font-size: 10pt;
    box-shadow: 0px 6px 16px rgba(0, 0, 0, 0.08);
}

/* === CABECERA UNIFICADA === */
QHeaderView::section {
    background: #0077b6;
    color: #FFFFFF;
    font: 600 10.5pt "Segoe UI";
    padding: 8px 6px;
    border: none;
}

/* Redondea solo las esquinas externas */
QHeaderView::section:first {
    border-top-left-radius: 12px;
}

QHeaderView::section:last {
    border-top-right-radius: 12px;
}

/* === FILAS === */
QTableWidget::item {
    padding: 6px;
    border: none;
}

QTableWidget::item:selected {
    background-color: #E1EEFF;
    color: #000000;
}


/* === BLOQUE MEDIDAS EN TIEMPO REAL === */
QGroupBox#group_lecturas {
    background-color: #0077b6;  
    border-radius: 20px;
    border: none;
    font: 600 14pt "Segoe UI";
    box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.10);
    margin: 22px 14px;
    padding-top: 70px;
}

/* T√≠tulo de ese bloque */
QGroupBox#group_lecturas::title {
    color: #ffffff;              
    font: 700 14pt "Segoe UI";
    margin-left: 20px;
    margin-top: 10px;
    background-image: url("icons/measures.png");
}

/* Texto dentro del bloque (m√°s claro para contrastar) */
QGroupBox#group_lecturas QLabel {
    background: transparent;
    color: #FFFFFF;
    font-size: 11pt;
    font-weight: 500;
}



/* === QSLIDER === */
QSlider::groove:vertical {
    width: 40px;
    border-radius: 10px;
    margin: 10px 0;
    background: qlineargradient(
        x1:0, y1:1, x2:0, y2:0,
        stop:0 #A5D8FF,
        stop:1 #0078D7
    );
}

QSlider::handle:vertical {
    background: #FFFFFF;
    border: 2px solid #0078D7;
    height: 22px;
    margin: -4px -14px;
    border-radius: 10px;
}

/* === SCROLLBAR MODERNO CON PUNTAS REDONDEADAS VISIBLES === */

QScrollBar:vertical {
    background: #edf2ff;          /* azul muy claro, integrado con fondo */
    border: none;
    width: 14px;
    margin: 6px 4px 6px 0;
    border-radius: 7px;           /* curva el canal tambi√©n */
}

/* Handle con efecto visual redondeado */
QScrollBar::handle:vertical {
    background: qlineargradient(
        x1:0, y1:0, x2:0, y2:1,
        stop:0 #4EA3F7,
        stop:1 #0078D7
    );
    border-radius: 7px;
    min-height: 30px;
    margin: 3px 2px 3px 2px;      /* üîπ deja espacio para que se vean las puntas */
    border: 1px solid rgba(0,0,0,0.08);
    box-shadow: 0px 2px 6px rgba(0,0,0,0.15); /* simula curvatura */
}

/* Hover */
QScrollBar::handle:vertical:hover {
    background: qlineargradient(
        x1:0, y1:0, x2:0, y2:1,
        stop:0 #5CB0FF,
        stop:1 #2188E8
    );
}

/* Quita las flechas */
QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    background: transparent;
    border: none;
    height: 0;
}

/* Espacios vac√≠os transparentes */
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: transparent;
}

/* Scrollbar horizontal */
QScrollBar:horizontal {
    background: #edf2ff;
    border: none;
    height: 14px;
    margin: 0 6px 6px 6px;
    border-radius: 7px;
}

QScrollBar::handle:horizontal {
    background: qlineargradient(
        x1:0, y1:0, x2:1, y2:1,
        stop:0 #4EA3F7,
        stop:1 #0078D7
    );
    border-radius: 7px;
    min-width: 30px;
    margin: 3px 2px;
    border: 1px solid rgba(0,0,0,0.08);
    box-shadow: 0px 2px 6px rgba(0,0,0,0.15);
}

QScrollBar::handle:horizontal:hover {
    background: qlineargradient(
        x1:0, y1:0, x2:1, y2:1,
        stop:0 #5CB0FF,
        stop:1 #2188E8
    );
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    background: transparent;
    border: none;
    width: 0;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: transparent;
}
